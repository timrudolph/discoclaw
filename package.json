{
  "name": "discoclaw",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "packageManager": "pnpm@10.28.2",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "prepare": "simple-git-hooks",
    "dev": "tsx src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/index.js",
    "discord:invite-url": "tsx scripts/discord-invite-url.ts",
    "discord:smoke-test": "node scripts/discord-smoke-test.mjs",
    "discord:join-threads": "node scripts/discord-join-threads.mjs",
    "claude:install-skills": "tsx scripts/install-claude-skills.ts",
    "sync:discord-context": "tsx scripts/sync-discord-context.ts",
    "migrate:weston-content": "tsx scripts/migrate-weston-content.ts",
    "doctor": "tsx scripts/doctor.ts",
    "test": "vitest run --passWithNoTests"
  },
  "dependencies": {
    "croner": "^10.0.1",
    "discord.js": "^14.19.3",
    "dotenv": "^16.4.5",
    "execa": "^9.5.2",
    "pino": "^9.7.0"
  },
  "simple-git-hooks": {
    "pre-push": "pnpm build && pnpm test"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "simple-git-hooks"
    ]
  },
  "devDependencies": {
    "@types/node": "^22.13.1",
    "simple-git-hooks": "^2.13.1",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^2.1.9"
  }
}
